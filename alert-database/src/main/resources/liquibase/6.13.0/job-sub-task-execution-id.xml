<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet author="psantos" id="add-job-execution-id-column">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="job_sub_task_status" columnName="job_execution_id" schemaName="alert"/>
            </not>
        </preConditions>
        <addColumn tableName="job_sub_task_status" schemaName="alert">
            <column name="job_execution_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>