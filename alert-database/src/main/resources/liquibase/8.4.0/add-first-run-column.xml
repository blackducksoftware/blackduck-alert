<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet author="psantos" id="add-first-run-column-to-job-completion-status">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="alert" tableName="job_completion_status" columnName="first_run"/>
            </not>
        </preConditions>
        <addColumn schemaName="alert" tableName="job_completion_status">
            <column name="first_run" type="timestamp" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>