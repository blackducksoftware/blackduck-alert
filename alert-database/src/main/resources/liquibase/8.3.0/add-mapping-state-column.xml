<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="psantos" id="add_mapping_to_jobs_column_to_notification_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="alert" tableName="raw_notification_content" columnName="mapping_to_jobs"/>
            </not>
        </preConditions>
        <addColumn schemaName="alert" tableName="raw_notification_content">
            <column name="mapping_to_jobs" type="BOOLEAN" valueBoolean="true" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>