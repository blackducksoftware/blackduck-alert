<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="martinch" id="add_jira_server_timeout_to_configuration_jira_server_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="alert" tableName="configuration_jira_server" columnName="timeout"/>
            </not>
        </preConditions>
        <addColumn schemaName="alert" tableName="configuration_jira_server">
            <column name="timeout" type="INT" defaultValue="300"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>


