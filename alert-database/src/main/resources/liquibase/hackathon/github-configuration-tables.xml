<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet author="psantos" id="create-github-configuration-table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="alert" tableName="configuration_github"/>
            </not>
        </preConditions>
        <createTable schemaName="alert" tableName="configuration_github">
            <column name="configuration_id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIMEZONE" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated" type="TIMESTAMP WITH TIMEZONE">
                <constraints nullable="true"/>
            </column>
            <column name="api_token" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="timeout_seconds" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <!-- Distribution job tables -->
    <changeSet author="psantos" id="create-github-job-details-table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="alert" tableName="github_job_details"/>
            </not>
        </preConditions>
        <createTable schemaName="alert" tableName="github_job_details">
            <column name="job_id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="repository_name" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="pull_request_title_prefix" type="VARCHAR" defaultValue="''">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="psantos" id="create-github-job-details-table-fk">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists schemaName="alert" foreignKeyName="github_job_details_job_id_fk"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                constraintName="github_job_details_job_id_fk"
                baseTableSchemaName="alert"
                baseTableName="github_job_details"
                baseColumnNames="job_id"
                referencedTableSchemaName="alert"
                referencedTableName="distribution_jobs"
                referencedColumnNames="job_id"
                onDelete="CASCADE"
                onUpdate="CASCADE"
        />
    </changeSet>
</databaseChangeLog>