{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "extends": [
    "airbnb",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "react-hooks"
  ],
  "rules": {
    "jsx-a11y/label-has-for": 0,
    "function-paren-newline": [
      "error",
      "multiline"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "warn",
      240
    ],
    "object-curly-newline": ["error", {
      "ExportDeclaration": { "minProperties": 1 }
    }],
    "react/forbid-prop-types": [
      "warn",
      {
        "forbid": [
          "any",
          "array",
          "object"
        ]
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-indent-props": [
      "error",
      4
    ],
    "react/no-string-refs": [
      "warn"
    ],
    "react/no-array-index-key": [
      "warn"
    ],
    "react/jsx-closing-tag-location": [
      "warn"
    ],
    "react/jsx-first-prop-new-line": [
      "warn"
    ],
    "react/jsx-no-bind": [ 
      "warn"
    ],
    "react/require-default-props": [
      "warn"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    "no-else-return": [
      "warn"
    ],
    "no-underscore-dangle": [
      "warn"
    ],
    "operator-linebreak": ["warn", "before"],
    "prefer-destructuring": ["warn", {
      "array": true,
      "object": true
    }, {
      "enforceForRenamedProperties": false
    }],
    "import/prefer-default-export": [
      "warn"
    ],
    "import/extensions": [
      "warn"
    ],
    "import/no-unresolved": [
      "off"
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to",
          "hrefLeft",
          "hrefRight"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "afterAll": true,
    "afterEach": true,
    "beforeAll": true,
    "beforeEach": true,
    "describe": true,
    "expect": true,
    "jest": true,
    "test": true
  }
}
